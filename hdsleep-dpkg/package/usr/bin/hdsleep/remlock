#!/bin/bash

. /usr/bin/hdsleep/constants
. $CONFIG_FILE

remove(){
	logger "[hdsleep] remove hdsleep.lock"
	rm -f $LOCK_FILE
	exit 0
}

state=$(hdparm -C $disk | sed '3!d' | grep -oE "(active|standby)")
if [ "$state" == "active" ]; then
	remove
fi

if [ "$(/usr/bin/hdsleep/hdusage)" -gt 0 ]; then	
	if [ -e $LOCK_FILE ]; then
		remove
	fi
fi
